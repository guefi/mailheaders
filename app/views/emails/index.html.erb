<% title "Emails" %>

<p><%= link_to "New Email", new_email_path %></p>

<table>
  <tr>
    <th></th>
    <th>Subject</th>
    <th>Headers</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for email in @emails %>
    <tr>
      <td><%= link_to "Send", sendit_email_path(email) %></td>
      <td><%= link_to email.subject, email %></td>
      <td align="center"><%= email.headerables.size %></td>
      <td><%= link_to "Show", email %></td>
      <td><%= link_to "Edit", edit_email_path(email) %></td>
      <td><%= link_to "Destroy", email, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

