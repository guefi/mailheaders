<% title "Emails" %>

<p><%= link_to "New Email", new_email_path %></p>

<table>
  <tr>
    <th></th>
    <th></th>
    <th>id</th>
    <th>Subject</th>
    <th>Headers</th>
    <th>Updated</th>
    <th colspan="3">Actions</th>
  </tr>
  <% for email in @emails %>
    <tr>
      <td><%= link_to "Edit", edit_email_path(email) %></td>
      <td><%= link_to "Show", email %></td>
      <td><%= email.id %></td>
      <td><%= email.subject %></td>
      <td align="center"><%= email.headerables.size %></td>
      <td><%= distance_of_time_in_words_to_now email.updated_at %></td>
      <td><%= link_to "Send", sendit_email_path(email) %></td>
			<td>&nbsp;</td>
      <td><%= link_to "Destroy", email, :confirm => 'Are you sure?', :method => :delete, :style => "color:red" %></td>
    </tr>
  <% end %>
</table>

