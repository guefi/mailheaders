<%= semantic_form_for @email do |f| %>

	<%= f.actions :submit, :cancel %>

  <%= f.inputs do %>
	  <%# f.input :headers, :as => :check_boxes %>

		<fieldset class="headers" >
    <%= f.semantic_fields_for :headerables do |headerable| %>
	     <%= headerable.select :header_id, Header.all.collect {|h| [ h.name, h.id ] }, {:include_blank => true} %>
	     <%= headerable.text_field :value %>
	     <%= headerable.check_box :_destroy %> <%= headerable.label :_destroy %> 
    <% end %>
		</fieldset>
		<br/>

	  <%= f.input :subject %>
	  <%= f.input :body %>
		
	<% end %>
  <%= f.actions :submit, :cancel %>
<% end %>

